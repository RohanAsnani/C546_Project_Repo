<h3>List of past leave records with status</h3>

<ul>
  {{#each leaveRecords}}
  <li>
    <h2>Subject:{{subject}}</h2>
    <p><span class="highlight">Reason:</span> {{reason}}</p>
    <p><span class="highlight">Start Date: </span>{{startDate}}</p>
    <p><span class="highlight">End Date:</span> {{endDate}}</p>
    <p><span class="highlight">Status:</span> {{status}}</p>
    {{#if reviewerID}}
    <p><span class="highlightt">HR's comment :</span>{{commentsReviewer}}</p>
    {{/if}}
  </li>
  {{/each}}
</ul>