<form id="createUser-form" name="createUser-form" class ="createUser-form" action="../admin/addEmp" method="POST">
    <h2>Create New User</h2>
    <h4>Personal Details</h4>
    <label for="firstName" id="labelFirstName">First Name:</label>
    <input  type="text" class="firstName" id="firstName" name="firstName" ><br>

    <label for="lastName" id="labelLastName">Last Name:</label>
    <input type="text" class="lastName" id="lastName" name="lastName" ><br>

    <label for="employeeId" id="labelEmployeeId">Employee Id:</label>
    <input type="text" class="employeeId" id="employeeId" name="employeeId" ><br>

    <label for="username" id="labelUsername">Username:</label>
    <input type="text" class="username" id="username" name="username" ><br>

    <label for="password" id="labelPassword">Password:</label>
    <input type="password" class="password" id="password" name="password" ><br>

    <label for="confirmPassword" id="labelConfirmPassword">Confirm Password:</label>
    <input type="password" class="confirmPassword" id="confirmPassword" name="confirmPassword" ><br>

    <label for="gender" id="labelGender" >Gender:</label>
    <select id="gender" name="gender">
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select><br>
    
    <label for="maritalStatus" id="labelMaritalStatus">Marital Status:</label>
    <select id="maritalStatus" name="maritalStatus">
        <option value="Single">Single</option>
        <option value="Married">Married</option>
        <option value="Seperated">Seperated</option>
        <option value="Widowed">Widowed</option> 
        <option value="Divorced">Divorced</option>
    </select><br>

    <label for="department" id="labelDepartment">Department:</label>
    <select id="department" name="department">
        <option value="IT">IT</option>
        <option value="Finance">Finance</option>
        <option value="Human Resources">Human Resources</option>
        <option value="Adminstration">Adminstration</option>
        <option value="Research And Development">Research And Developement</option>
        <option value="Customer Service">Customer Service</option>
    </select><br>

    <label for="role" id="labelId">Role:</label>
    <select id="role" name="role">
        <option value="Admin">Admin</option>
        <option value="HR">HR</option>
        <option value="Employee">Employee</option>
    </select><br>
  
    {{!-- 
    Notes
    Status
