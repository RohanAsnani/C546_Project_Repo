    <label for="disability" id="labelDisability">Disability:</label>
    <input type="text" class="disability" id="disability" name="disability" ><br>

    <label for="race" id="labelRace">Race:</label>
    <input type="text" class="race" id="race" name="race"><br>

    <label for="countryOfOrigin" id="labelCountryOfOrigin">Country Of Origin:</label>
    <input type="text" class="countryOfOrigin" id="countryOfOrigin" name="countryOfOrigin" ><br>

    <label for="startDate" id="labelStartDate">Start Date:</label>
    <input type="date" class="startDate" id="startDate" name="startDate" ><br>
  {{!-- <label for="endDate" id="labelEndDate">End Date:</label>
    <input type="date" class="endDate" id="endDate" name="endDate"><br> Intitalise End date as none at first--}}

    <label for="dob" id="labelDob">Date of Birth:</label>
    <input type="date" class="dob" id="dob" name="dob" ><br>

  {{!-- previous Position --}}  
    <label for="currentPosition" id="labelCurrentPosition">Current Position:</label>
    <input type="text" id="currentPosition" name="currentPosition" class="currentPosition" ><br>

    <label for="currentSalary" id="labelCurrentSalary">Current Salary:</label>
    <input type="number" class="currentSalary" id="currentSalary" name="currentSalary" ><br>

    <label for="promoDate" id="labelPromoDate">Promo Date:</label>
    <input type="date" class="promoDate" id="promoDate" name="promoDate"><br>
  {{!-- ContactInfo --}}
     <h4>Contact Info</h4>
    
    <label for="phone" id="labelPhone">Phone Number:</label>
    <input type="tel" class="phone" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" ><br>
    
    <label for="email" id="labelEmail">Email Id:</label>
    <input type="email" class="email" id="email" name="email" ><br>

    <label for="primaryAddress" id="labelPrimaryAddress">Primary Address:</label>
    <input type="text" class="primaryAddress" id="primaryAddress" name="primaryAddress" ><br>

    <label for="secondaryAddress" id="labelSecondaryAddress">Secondary Address:</label>
    <input type="text" class="secondaryAddress" id="secondaryAddress" name="secondaryAddress" ><br>

    <h4>Team Assignment</h4>
    <h6>for subordinates and managers i will be implementing multiple select dropdown</h6><br>
    <label for="subordinates" id="labelSubordinates">Subordinates:</label>
    <select id="subordinates" name="subordinates" multiple>
        <option value="Employee 1">Employee 1</option>
        <option value="Employee 2">Employee 2</option>
        <option value="Employee 3">Employee 3</option>
    </select><br>

    <label for="managerId" id="labelManagerId">Manager Assigned:</label>
    <select id="managerId" name="managerId" multiple>
        <option value="Manager 1">Manager 1</option>
        <option value="Manager 2">Manager 2</option>
        <option value="Manager 3">Manager 3</option>
    </select>

