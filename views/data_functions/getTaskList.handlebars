<article>
    <h2>{{taskTypeList}}</h2>
    <table class="taskTable">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Employee ID</th>
            {{#if isEmp}}
            <th>Task Type</th>
            {{/if}}
            <th>Task Name</th>
            <th>Task Description</th>
            <th>Due Date</th>
            {{#if viewAll}}
            <th>Completed On</th>
            <th>Status</th>
            {{else}}
            {{!-- To be added for employee not for HR --}}
            <th>Action</th>
            {{/if}}
            {{#if isEmp}}
            {{else}}
            <th>Action</th>
            {{/if}}

        </tr>
        {{#if viewAll}}
        {{#each taskList}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{username}}</td>
            <td>{{employeeId}}</td>
            {{#if isEmp}}
            <td>{{taskType}}</td>
            {{/if}}
            <td>{{taskName}}</td>
            <td>{{taskDesc}}</td>
            <td>{{dueDate}}</td>
            <td>{{completedOn}}</td>
            <td>{{status}}</td>
            {{#if isEmp}}
            {{else}}
            {{#if completed}}
            <td>
                <p>-</p>
            </td>
            {{else}}
            <td>
                <button onclick="window.location.href='/hrc/hr/deleteTask/{{employeeId}}/{{taskId}}/{{taskType}}/false'"
                    id="deleteTask" name="deleteTask" class="deleteTask" data-id="{{taskId}}">Delete
                    Task</button><br>
                <button
                    onclick="window.location.href='/hrc/hr/emailReminder/{{employeeId}}/{{taskId}}/{{taskType}}/false'"
                    id="sendEmail" name="sendEmail" class="sendEmail" data-id="{{taskId}}">Send reminder email</button>
            </td>
            {{/if}}
            {{/if}}
        </tr>
        {{/each}}
        {{else}}
        {{#each taskList}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{username}}</td>
            <td>{{employeeId}}</td>
            {{#if isEmp}}
            <td>{{taskType}}</td>
            {{/if}}
            <td>{{taskName}}</td>
            <td>{{taskDesc}}</td>
            <td>{{dueDate}}</td>
            <td><a href="/hrc/employee/completeTask/{{employeeId}}/{{taskId}}/{{taskType}}" id="completeTask"
                    name="completeTask" class="completeTask" data-id="{{taskId}}">Mark as complete</a></td>
        </tr>
        {{/each}}
        {{/if}}
    </table>
    <p>{{noDataPresentMsg}}</p>
    {{!--
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="../../../public/js/completeTask.js"></script> --}}
</article>
{{#if isEmp}}
<button onclick="window.location.href='/hrc/employee'">Homepage</button>
{{else}}
<button onclick="window.location.href='/hrc/hr'">Homepage</button>
{{/if}}

<a class="page-link" id="logoutLink" href="/hrc/logout">Logout</a>