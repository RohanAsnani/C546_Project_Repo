<article>
    <h2>Task List</h2>
    <table class="taskTable">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Employee ID</th>
            <th>Task Name</th>
            <th>Task Description</th>
            <th>Due Date</th>
            <th>Completed On</th>
            <th>Status</th>
            {{!-- To be added for employee not for HR --}}
            {{!-- <th>Action</th> --}}
        </tr>
        {{#each taskList}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{username}}</td>
            <td>{{employeeId}}</td>
            <td>{{taskName}}</td>
            <td>{{taskDesc}}</td>
            <td>{{dueDate}}</td>
            <td>{{completedOn}}</td>
            <td>{{status}}</td>
            {{!-- To be added for employee not for HR --}}
            {{!-- <td><a href="/hrc/hr/completeTask" method="PATCH" id="completeTask" name="completeTask"
                    class="completeTask" data-id="{{taskId}}">Mark as
                    complete</a></td> --}}
        </tr>
        {{/each}}
    </table>
    <p>{{noDataPresentMsg}}</p>
    {{!--
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="../../../public/js/completeTask.js"></script> --}}
</article>

