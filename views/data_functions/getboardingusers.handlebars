<h2>{{title}}</h2>
<ol class="user" {{hideList}}>
    {{#if isOnboarding}}
    {{#each users}}
    <li>
        <a href="/hrc/hr/onboarding/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>{{firstName}} {{lastName}}</h3>
        </a>
        <a href="/hrc/hr/createTask/onboard/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>Assign Task</h3>
        </a>

        <p>Email: {{contactInfo.email}}</p>
        <p>Department: {{department}}</p>
        <p>Role: {{role}}</p>
        <p>Employee Id: {{employeeId}}</p>
    </li>
    {{/each }}
</ol>
<ol {{hideList}}>
    <h2>Awaiting User Action</h2>
    {{#each usersES}}
    <li>
        <a href="/hrc/hr/onboarding/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>{{firstName}} {{lastName}}</h3>
        </a>
        <a href="/hrc/hr/createTask/onboard/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>Assign Task</h3>
        </a>

        <p>Email: {{contactInfo.email}}</p>
        <p>Department: {{department}}</p>
        <p>Role: {{role}}</p>
        <p>Employee Id: {{employeeId}}</p>
    </li>
    {{/each}}
</ol>

{{else}}
<ol {{hideList}}>
    {{#each users}}
    <li>
        <a href="/hrc/hr/offboarding/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>{{firstName}} {{lastName}}</h3>
        </a>
        <a href="/hrc/hr/createTask/offboard/{{employeeId}}" data-employeeId="{{employeeId}}">
            <h3>Assign Task</h3>
        </a>
        <p>Email: {{contactInfo.email}}</p>
        <p>Department: {{department}}</p>
        <p>Role: {{role}}</p>
        <p>Employee Id: {{employeeId}}</p>
    </li>
    {{/each}}
    {{/if}}
</ol>
<ul id="errorList" name="errorList" hidden> </ul>

<p id="error" name="error" class="error" {{hidden}}>
    {{message}}
</p>
<button onclick="window.location.href='/hrc/hr'">Back</button>
<a class="page-link" id="logoutLink" href="/hrc/logout">Logout</a>